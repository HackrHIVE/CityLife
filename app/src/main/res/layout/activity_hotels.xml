<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotels">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/lnr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Hotels"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/oberoi"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/oberoi_hotel" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/oberoi"
                        android:layout_alignEnd="@+id/oberoi"
                        android:layout_alignBottom="@+id/oberoi"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Oberoi Hotel"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/vll"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView

                        android:id="@+id/lalit"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/lalit_hotel" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/lalit"
                        android:layout_alignEnd="@+id/lalit"
                        android:layout_alignBottom="@+id/lalit"
                        android:text="Lalit Hotel"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/relative2"
                android:layout_below="@id/relative"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ramada"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ramada_hotel" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/ramada"
                        android:layout_alignEnd="@+id/ramada"
                        android:layout_alignBottom="@+id/ramada"
                        android:text="Ramada Hotel"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Taj"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/taj_hotel" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/Taj"
                        android:layout_alignEnd="@+id/Taj"
                        android:layout_alignBottom="@+id/Taj"
                        android:text="Taj Hotel"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/relative2"
                android:id="@+id/relative3"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/shivalik"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/shivalikview_hotel" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/shivalik"
                        android:layout_alignEnd="@+id/shivalik"
                        android:layout_alignBottom="@+id/shivalik"
                        android:text="ShivalikView Hotel"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hayatt"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/hayatt_regency" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="#be000000"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/hayatt"
                        android:layout_alignEnd="@+id/hayatt"
                        android:layout_alignBottom="@+id/hayatt"
                        android:text="Hayatt Regency"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>